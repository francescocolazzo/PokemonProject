{% extends 'base.html.twig' %}

{% block title %}Teams{% endblock %}

{% block body %}
    <h1>Pokemon Teams</h1>

    <table class="table">
        <thead>
            <tr>
                <th width="20%">Team name</th>
                <th width="35%">Pokemon</th>
                <th width="15%">Total Experience</th>
                <th width="20%">Types</th>
                <th width="10%"></th>
            </tr>
        </thead>
        <tbody>
        {% for team in teams %}
            <tr>
                <td>{{ team.name }}</td>
                <td>{{ team.sprites | raw }}</td>
                <td>{{ team.totexperience }}</td>
                <td>{{ team.alltypes }}</td>
                <td style="text-align: end;">
                    <a class="btn btn-outline-success" href="{{ path('team_edit', {'id': team.id}) }}">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3" style="text-align: center;">No Team</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-outline-success"  href="{{ path('team_new') }}">Create team</a>
{% endblock %}
