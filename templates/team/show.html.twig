{% extends 'base.html.twig' %}

{% block title %}Team{% endblock %}

{% block body %}
    <h1>Team</h1>

    <div class="form-group col-6">
        <table class="table">
            <tbody>
            <tr>
                <th>Name</th>
                <td>{{ team.name }}</td>
            </tr>
            </tbody>
        </table>
    </div>

    <div class="row">
        <div class="form-group col-5">
            <a class="btn btn-outline-success" href="{{ path('team_edit', {'id': team.id}) }}">Modify</a>
        </div>
        <div class="form-group col-3">
            {{ include('team/_delete_form.html.twig') }}
        </div>
    </div>
    <div class="form-group col-2">
        <a class="btn btn-outline-success" href="{{ path('team_index') }}" >Return to list</a>
    </div>

{% endblock %}
