{% extends 'base.html.twig' %}

{% block title %}Edit Team{% endblock %}

{% block body %}
    <h1>Edit Team </h1>

    {{ include('team/_form.html.twig', {'button_label': 'Update Team'}) }}

    <div class="row">
        <div class="form-group col-4">
            <a class="btn btn-outline-success" href="{{ path('team_index') }}" >Return to list</a>
        </div>
        <div class="form-group col-3">
            {{ include('team/_delete_form.html.twig') }}
        </div>
        <div class="form-group col-2">
            <form method="post" action="{{ path('team_edit',  {'CatchPokemon': 'ok','id': id}) }}"
                  onsubmit="return confirm('Are you sure you want to add new Pokemon to this Team?');">
                <button type="submit" class="btn btn-outline-success">Gotta Catch 'Em All'</button>
            </form>
        </div>
    </div>

    <div class="form-group col-12">
        <table class="table">
            <thead>
            <tr>
                <th width="10%"></th>
                <th  width="20%">Pokemon Name</th>
                <th  width="15%">Base experience</th>
                <th  width="25%">Abilities</th>
                <th  width="25%">Types</th>
                <th  width="5%" ></th>
            </tr>
            </thead>
            <tbody>
            {% for p in pokemons %}
                <tr>
                    <td><img src="{{ p.spriteimage }}"></td>
                    <td>{{ p.name }}</td>
                    <td>{{ p.baseexperience }}</td>
                    <td>{{ p.abilities }}</td>
                    <td>{{ p.types }}</td>
                    <td>
                        <a class="btn btn-outline-success"
                           onclick="return confirm('Are you sure you want to delete this Pokemon from Team?');"
                           href="{{ path('team_edit', {'id': team.id ,'idPokemon': p.id} ) }}">Delete</a>
                    </td>
                </tr>


            {% else %}
                <tr>
                    <td colspan="5" style="text-align: center;">No Pokemon in Team</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
